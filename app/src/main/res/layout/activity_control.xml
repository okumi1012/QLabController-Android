<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ControlActivity">

    <!-- Title with Workspace Name -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="QLab Controller"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/infoButton"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp" />

    <!-- Info Button -->
    <ImageButton
        android:id="@+id/infoButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@android:drawable/ic_menu_info_details"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Connection Info"
        app:layout_constraintTop_toTopOf="@id/titleText"
        app:layout_constraintBottom_toBottomOf="@id/titleText"
        app:layout_constraintEnd_toStartOf="@id/disconnectButton"
        android:layout_marginEnd="4dp" />

    <!-- Small Disconnect Button in corner -->
    <Button
        android:id="@+id/disconnectButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:text="✕"
        android:textSize="16sp"
        android:backgroundTint="@android:color/darker_gray"
        android:padding="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Cue Information Card with 5 cues -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cueInfoCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cue List"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/previous2CueText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="---"
                android:textSize="10sp"
                android:textColor="@android:color/darker_gray"
                android:padding="2dp" />

            <TextView
                android:id="@+id/previousCueText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Previous: ---"
                android:textSize="11sp"
                android:textColor="@android:color/darker_gray"
                android:padding="3dp" />

            <TextView
                android:id="@+id/currentCueText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current: ---"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:padding="5dp"
                android:background="@color/teal_200" />

            <TextView
                android:id="@+id/nextCueText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next: ---"
                android:textSize="11sp"
                android:textColor="@android:color/darker_gray"
                android:padding="3dp" />

            <TextView
                android:id="@+id/next2CueText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="---"
                android:textSize="10sp"
                android:textColor="@android:color/darker_gray"
                android:padding="2dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Cue Notes Card - Fixed 2-3 lines height -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/notesCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#FFF9E5"
        app:layout_constraintTop_toBottomOf="@id/cueInfoCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#8B7500"
                android:layout_marginBottom="3dp" />

            <TextView
                android:id="@+id/notesText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="#5A4A00"
                android:text="No notes for this cue"
                android:maxLines="2"
                android:ellipsize="end"
                android:minHeight="40dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Control Buttons Grid Layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/controlButtonsLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/notesCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Left Column: PREV, PANIC, NEXT -->
        <Button
            android:id="@+id/previousButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="◀ PREV"
            android:textSize="12sp"
            android:backgroundTint="@color/purple_500"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/panicButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/pauseButton"
            app:layout_constraintVertical_weight="1"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="6dp" />

        <Button
            android:id="@+id/panicButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/panic"
            android:textSize="28sp"
            android:textStyle="bold"
            android:backgroundTint="@color/red_panic"
            app:layout_constraintTop_toBottomOf="@id/previousButton"
            app:layout_constraintBottom_toTopOf="@id/nextButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/pauseButton"
            app:layout_constraintVertical_weight="2"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="NEXT ▶"
            android:textSize="12sp"
            android:backgroundTint="@color/purple_500"
            app:layout_constraintTop_toBottomOf="@id/panicButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/pauseButton"
            app:layout_constraintVertical_weight="1"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="6dp" />

        <!-- Middle Column: PAUSE, space, RESUME -->
        <Button
            android:id="@+id/pauseButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="⏸ PAUSE"
            android:textSize="11sp"
            android:backgroundTint="@color/purple_500"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/resumeButton"
            app:layout_constraintStart_toEndOf="@id/previousButton"
            app:layout_constraintEnd_toStartOf="@id/goButton"
            app:layout_constraintVertical_weight="1"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="6dp" />

        <Button
            android:id="@+id/resumeButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="▶ RESUME"
            android:textSize="11sp"
            android:backgroundTint="@color/purple_500"
            app:layout_constraintTop_toBottomOf="@id/pauseButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/nextButton"
            app:layout_constraintEnd_toStartOf="@id/goButton"
            app:layout_constraintVertical_weight="1"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="6dp" />

        <!-- Right Column: GO (spans full height) -->
        <Button
            android:id="@+id/goButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/go"
            android:textSize="56sp"
            android:textStyle="bold"
            android:backgroundTint="@color/green_go"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/pauseButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1.5"
            android:layout_marginStart="6dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
